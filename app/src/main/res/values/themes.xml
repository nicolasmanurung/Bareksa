<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BareksaTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BareksaTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BareksaTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.BareksaTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Bareksa.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/Theme.Bareksa.Tab</item>
        <item name="tabIndicatorColor">@color/primaryColor</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
    </style>

    <style name="Theme.Bareksa.Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.Bareksa.Tab.Active" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/primaryColor</item>
    </style>
</resources>